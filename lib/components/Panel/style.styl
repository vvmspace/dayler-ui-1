.container
	background-color #ff
	border-radius 2px
	box-shadow 0 2px 7px 0 rgba(0, 0, 0, .17)
	width 100%
	display flex
	flex-direction column
	height 100%

.header
	border-bottom 1px solid #eee
	padding 0 20px
	display flex
	align-items center
	height 40px
	border-bottom-left-radius 2px
	border-bottom-right-radius 2px
	text-transform uppercase
	font-size 11px
	user-select none
	cursor default
	flex-shrink 0

.body
	padding 20px
	border-bottom-left-radius 2px
	border-bottom-right-radius 2px
	flex-grow 1
