@import '../../colors.styl'

.container
    height 100%
    width 100%
    overflow-y hidden
    position relative
    flex-grow 1

    &:hover > .scroll
        opacity 1
        transition-delay .5s

.body
    width 100%
    height 100%
    position absolute

.scroll
    position absolute
    right 0
    width 6px
    height 100%
    background-color #f9
    z-index 10
    opacity 0
    transition opacity .1s ease-in-out
    transition-delay 0s

.bar
    background-color #e4
    height 10px
    width 6px
    position relative
    top 0
    display block
    border-radius 3px
