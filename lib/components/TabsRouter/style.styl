@import '../../colors.styl'

.container
    display flex
    flex-direction column
    background-color #ff
    border-radius 2px
    box-shadow 0 2px 7px 0 rgba(0, 0, 0, .17)

.header
    flex-shrink 0
    position relative
    display flex
    justify-content flex-start
    align-items flex-end
    height 50px
    border-bottom 2px solid #ddd
    user-select none
    padding 0 20px

.body
    flex-grow 1

.tab
    position relative
    top 2px
    display block
    padding 15px 10px
    min-width 80px
    color $grey-200
    text-align center
    text-decoration none
    text-transform uppercase
    font-size 12px
    transition color .2s ease

    &:hover
        color $grey-400

.active
    color $grey-500

.border
    position absolute
    bottom -2px
    display block
    width 0
    height 2px
    background-color $red-500
    transition left .2s ease, width .1s ease
