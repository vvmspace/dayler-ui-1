@import '~dayler-ui/stylus/mixins'
@import '~dayler-ui/stylus/variables'

@import '~app/stylus/variables'

.container
    fadeInDown(.1s)
    border-bottom 1px solid #eee
    background-color #fff
    position absolute
    width 100%
    top $header-height
    display none
    padding 25px 0
    z-index 9
    flex-direction column
    align-items center

.open
    display flex

.content
    display flex
    flex-direction column
    align-items center
    width calc(100vw - 35px)
    min-height 200px

+media-retina()
    .content
        width $screen-retina - 35px

+media-desktop()
    .content
        width $screen-desktop - 35px

+media-tablet()
    .content
        width $screen-tablet - 35px

+media-mobile()
    .container
        fadeInLeft(.1s)
        bottom 0
        right 10px
        left 0
        overflow-y auto
        width 94%
        box-shadow 0 2px 7px 0 rgba(0, 0, 0, .17)

    .content
        width 100%
        padding 0 25px
