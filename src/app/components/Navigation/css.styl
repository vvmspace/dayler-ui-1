@import '~dayler-ui/stylus/mixins'

@import '~app/stylus/variables'

.container
    fadeInLeft(.2s)
    width 280px
    background-color #fff
    flex-shrink 0
    box-shadow 0 2px 7px 0 rgba(0, 0, 0, .17)
    transition width .1s ease-in
    height 100vh
    position absolute
    z-index 1000

.header
    height 80px
    display flex
    border-bottom 1px solid #eee
    user-select none

    & img
        position relative
        top -2px

    & .feather
        display none
        color #000000

.action
    width 80px
    display flex
    align-items center
    flex-direction column
    justify-content center

.icon
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 43px
    height 43px
    cursor pointer
    border-radius 50%
    transition background-color .15s ease

    &:hover
        background-color #F8F8F8

.img
    fadeIn(.1s, .1s)

.xs
    width $navigation-width-xs

    .header
        & img
            display none

+media-tablet()
    .container
        width $navigation-width-xs

    .header
        & img
            display none
            transition opacity 2s ease
            opacity 0

        & .feather
            display flex

    .action
        & .icon
            display none

+media-mobile()
    .container
        display none
