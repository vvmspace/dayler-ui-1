@import '~dayler-ui/mixins'
@import '~dayler-ui/colors'
@import '~@app/variables'

.container
	fadeIn(.1s)
	align-items center
	display none
	flex-direction column
	position fixed
	top $header-height
	width 100%
	background-color #fff
	border-top 1px solid #eee
	box-shadow 0 1px 2px 0 rgba(0, 0, 0, .17)

.open
	display flex

.content
	padding 25px 0
	display flex

.group
	flex-grow 1
	display flex
	flex-direction column

.navlink
	text-decoration none
	display flex
	align-items center
	height 40px
	color $grey-300

	&:hover
		color $grey-500

.active, .active:hover
	color $red-500

	& > .title
		color $grey-600

.icon
	margin-right 10px
