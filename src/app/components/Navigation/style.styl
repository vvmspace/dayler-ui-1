@import '~dayler-ui/colors'
@import '~dayler-ui/mixins'

@import '~@app/stylus/variables'

.container
    fadeInLeft(.3s)
    box-shadow 0 2px 7px 0 rgba(0, 0, 0, .17)
    flex-shrink 0
    width $nav-width-max
    background-color #fff
    display flex
    flex-direction column
    user-select none
    z-index 100

.min
    width $nav-width-min

    .logo
        display none

.header
    display flex
    height $nav-height
    align-items center
    user-select none
    border-bottom 1px solid #eee
    flex-shrink 0

.body
    flex-grow 1
    display flex
    flex-direction column

.scroll
    &-container
        margin-bottom 15px

    &-body
        padding 10px 0

.toogle
    height $nav-height
    width $nav-height
    display flex
    flex-direction column
    align-items center
    justify-content center
    cursor pointer

    &-icon
        color $grey-400

.logo
    position relative
    top -3px

.mobile
    &-logo
        position relative
        top -3px
        margin-right 25px

    &-menu
        display none
        align-items center
        justify-content space-between
        height $nav-height

    &-toogle
        height 100%
        width $nav-height
        display flex
        flex-direction column
        align-items center
        justify-content center
        cursor pointer

+media-tablet()
    .container
        width $nav-width-min

    .logo
        display none

    .header
        display none

+media-mobile()
    .container
        fadeInDown(.3s)
        width 100%

    .header
        display none

    .body
        fadeIn(.1s)
        background-color #fff
        top $nav-height
        z-index 10
        flex-grow 1
        display none
        position absolute
        width 100%
        border-top 1px solid #eee
        flex-grow 1
        overflow hidden
        padding 0

    .mobile
        &-menu
            display flex

        &-opened
            display flex
            min-height calc(80vh - 70px)
